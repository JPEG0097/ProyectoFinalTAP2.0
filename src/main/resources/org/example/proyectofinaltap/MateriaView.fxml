<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.MateriaController"
      style="-fx-background-color: #ecf0f1;">

    <HBox alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: linear-gradient(to right, #8e2de2, #4a00e0); -fx-padding: 25;">
        <Label text="M"
               style="-fx-font-size: 32pt; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <VBox>
            <Label text="GESTIÓN DE MATERIAS"
                   style="-fx-font-size: 22pt; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Catálogo académico de asignaturas y créditos"
                   style="-fx-font-size: 11pt; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>
    </HBox>

    <VBox spacing="25" style="-fx-padding: 30;">

        <VBox spacing="20"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

            <HBox alignment="CENTER_LEFT" spacing="12">
                <Region prefWidth="6" prefHeight="30"
                        style="-fx-background-color: linear-gradient(to bottom, #8e2de2, #4a00e0); -fx-background-radius: 3;"/>
                <Label text="Información de la Materia"
                       style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>

            <GridPane hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="●" style="-fx-font-size: 14pt; -fx-text-fill: #8e2de2;"/>
                        <Label text="NOMBRE DE LA MATERIA" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    <TextField fx:id="txtNombre" promptText="Ej: Base de Datos, Cálculo Integral"
                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15; -fx-font-size: 12pt;"/>
                </VBox>

                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="●" style="-fx-font-size: 14pt; -fx-text-fill: #4a00e0;"/>
                        <Label text="CÓDIGO" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    <TextField fx:id="txtCodigo" promptText="BD-305"
                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15; -fx-font-size: 12pt;"/>
                </VBox>

                <VBox spacing="8" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="●" style="-fx-font-size: 14pt; -fx-text-fill: #9b59b6;"/>
                        <Label text="CRÉDITOS" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    <TextField fx:id="txtCreditos" promptText="6"
                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15; -fx-font-size: 12pt;"/>
                </VBox>
            </GridPane>

            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0 0 0;">
                <Button text="REGISTRAR" onAction="#handleSaveMateria"
                        style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12pt; -fx-padding: 15 30; -fx-background-radius: 10;"/>

                <Button text="ACTUALIZAR" onAction="#handleUpdateMateria"
                        style="-fx-background-color: linear-gradient(to right, #f39c12, #e67e22); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12pt; -fx-padding: 15 30; -fx-background-radius: 10;"/>

                <Button text="ELIMINAR" onAction="#handleDeleteMateria"
                        style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12pt; -fx-padding: 15 30; -fx-background-radius: 10;"/>
            </HBox>
        </VBox>

        <VBox spacing="15" VBox.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Region prefWidth="50" prefHeight="50"
                        style="-fx-background-color: linear-gradient(to bottom right, #8e2de2, #4a00e0); -fx-background-radius: 25;"/>
                <VBox>
                    <Label text="Catálogo de Materias"
                           style="-fx-font-size: 16pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Todas las asignaturas disponibles en el sistema"
                           style="-fx-font-size: 11pt; -fx-text-fill: #95a5a6;"/>
                </VBox>
            </HBox>

            <TableView fx:id="tableViewMaterias" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: #fafbfc; -fx-background-radius: 10;">
                <columns>
                    <TableColumn fx:id="colID" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colNombre" text="Nombre de la Materia" prefWidth="300"/>
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="150"/>
                    <TableColumn fx:id="colCreditos" text="Créditos" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>
</VBox>