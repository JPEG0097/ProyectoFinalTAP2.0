<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">

    <Rectangle width="800" height="600" style="-fx-fill: #667eea;"/>

    <VBox alignment="CENTER" spacing="20" maxWidth="400" maxHeight="500"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 5);">

        <VBox alignment="CENTER" spacing="10">
            <Label text="SIS"
                   style="-fx-font-size: 36pt; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
            <Label text="Sistema Académico"
                   style="-fx-font-weight: bold; -fx-font-size: 18pt; -fx-text-fill: #2c3e50;"/>
            <Label text="Portal de Calificaciones"
                   style="-fx-font-size: 11pt; -fx-text-fill: #7f8c8d;"/>
        </VBox>

        <VBox spacing="15" style="-fx-padding: 20 0;">
            <VBox spacing="5">
                <Label text="Usuario"
                       style="-fx-font-size: 11pt; -fx-text-fill: #5a6c7d;"/>
                <TextField fx:id="txtUsuario" promptText="Ingresa tu usuario"
                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 12pt;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Contraseña"
                       style="-fx-font-size: 11pt; -fx-text-fill: #5a6c7d;"/>
                <PasswordField fx:id="txtContrasena" promptText="Ingresa tu contraseña"
                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 12pt;"/>
            </VBox>
        </VBox>

        <Button text="INICIAR SESIÓN" onAction="#handleLogin"
                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14pt; -fx-padding: 12 40; -fx-background-radius: 8;"/>

        <Label fx:id="lblMensaje" text=""
               style="-fx-text-fill: #e74c3c; -fx-font-size: 10pt; -fx-padding: 10;"/>
    </VBox>
</StackPane>