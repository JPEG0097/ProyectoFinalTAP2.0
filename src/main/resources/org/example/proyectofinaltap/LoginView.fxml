<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.LoginController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Inicio de Sesión" style="-fx-font-weight: bold; -fx-font-size: 16pt;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtUsuario" promptText="admin" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="txtContrasena" promptText="1234" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Button text="Iniciar Sesión" onAction="#handleLogin" prefWidth="150"/>

    <Label fx:id="lblMensaje" style="-fx-text-fill: red;"/>
</VBox>