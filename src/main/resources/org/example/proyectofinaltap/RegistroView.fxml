                    </VBox>

                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="" style="-fx-font-size: 14pt;"/>
                            <Label text="ROL DEL USUARIO" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                        </HBox>
                        <ComboBox fx:id="cbRol" maxWidth="Infinity" promptText="Seleccionar rol (Administrador, Alumno, Profesor)"
                                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 12pt; -fx-border-color: #e1e8ed; -fx-border-radius: 10; -fx-border-width: 2;"/>
                    </VBox>
                </GridPane>
            </VBox>

            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10 0;">
                <StackPane>
                    <Region prefWidth="120" prefHeight="2"
                            style="-fx-background-color: linear-gradient(to right, transparent, #bdc3c7, transparent);"/>
                </StackPane>
                <VBox alignment="CENTER" spacing="5"
                      style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                    <Label text="" style="-fx-font-size: 20pt;"/>
                    <Label text="Informaci贸n del Alumno"
                           style="-fx-font-size: 11pt; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                </VBox>
                <StackPane>
                    <Region prefWidth="120" prefHeight="2"
                            style="-fx-background-color: linear-gradient(to right, #bdc3c7, transparent);"/>
                </StackPane>
            </HBox>

            <VBox spacing="20"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <StackPane>
                        <Region prefWidth="60" prefHeight="60"
                                style="-fx-background-color: linear-gradient(to bottom right, #f093fb, #f5576c); -fx-background-radius: 30;"/>
