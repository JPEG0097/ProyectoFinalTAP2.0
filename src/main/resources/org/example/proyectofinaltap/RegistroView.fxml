                    </columnConstraints>

                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="" style="-fx-font-size: 14pt;"/>
                            <Label text="MATRCULA" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                        </HBox>
                        <TextField fx:id="txtMatricula" promptText="Ej: A202412345"
                                   style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15; -fx-font-size: 12pt; -fx-border-color: #e1e8ed; -fx-border-radius: 10; -fx-border-width: 2; -fx-prompt-text-fill: #bdc3c7;"/>
                    </VBox>

                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="" style="-fx-font-size: 14pt;"/>
                            <Label text="NOMBRE COMPLETO" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                        </HBox>
                        <TextField fx:id="txtNombreCompleto" promptText="Nombre y Apellidos"
                                   style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 15; -fx-font-size: 12pt; -fx-border-color: #e1e8ed; -fx-border-radius: 10; -fx-border-width: 2; -fx-prompt-text-fill: #bdc3c7;"/>
                    </VBox>

                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="" style="-fx-font-size: 14pt;"/>
                            <Label text="GRUPO ASIGNADO" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                        </HBox>
                        <ComboBox fx:id="cbGrupo" maxWidth="Infinity" promptText="Seleccionar grupo acad茅mico..."
                                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 12pt; -fx-border-color: #e1e8ed; -fx-border-radius: 10; -fx-border-width: 2;"/>
                    </VBox>
                </GridPane>
            </VBox>

            <HBox alignment="CENTER" style="-fx-padding: 10 0;">
                <Button text="  REGISTRAR USUARIO COMPLETO  " onAction="#handleRegister"
                        prefWidth="400" prefHeight="55"
                        style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14pt; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(46,204,113,0.5), 20, 0, 0, 8);"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15"
                  style="-fx-background-color: linear-gradient(to right, #fff3cd, #ffe8a1); -fx-padding: 20; -fx-background-radius: 12; -fx-border-color: #ffc107; -fx-border-radius: 12; -fx-border-width: 2;">
                <StackPane>
                    <Region prefWidth="50" prefHeight="50"
                            style="-fx-background-color: rgba(255,193,7,0.3); -fx-background-radius: 25;"/>
                    <Label text="" style="-fx-font-size: 24pt;"/>
                </StackPane>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Importante" style="-fx-font-weight: bold; -fx-text-fill: #856404; -fx-font-size: 13pt;"/>
                    <Label text="Complete todos los campos para crear un usuario con su perfil de alumno asociado. La cuenta se activar谩 inmediatamente despu茅s del registro."
                           style="-fx-text-fill: #856404; -fx-font-size: 11pt; -fx-wrap-text: true;" wrapText="true"/>
