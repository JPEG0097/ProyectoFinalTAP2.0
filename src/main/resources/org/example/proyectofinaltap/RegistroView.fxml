                        <Region prefWidth="60" prefHeight="60"
                                style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2); -fx-background-radius: 30;"/>
                        <Label text="" style="-fx-font-size: 28pt;"/>
                    </StackPane>
                    <VBox>
                        <Label text="Datos de Acceso al Sistema"
                               style="-fx-font-size: 16pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="Credenciales de inicio de sesi贸n"
                               style="-fx-font-size: 11pt; -fx-text-fill: #95a5a6;"/>
                    </VBox>
                </HBox>

                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="" style="-fx-font-size: 14pt;"/>
