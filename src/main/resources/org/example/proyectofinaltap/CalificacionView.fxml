<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.CalificacionesController"
      style="-fx-background-color: #ecf0f1;">

    <HBox alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: linear-gradient(to right, #fc466b, #3f5efb); -fx-padding: 25;">
        <Label text="C"
               style="-fx-font-size: 32pt; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <VBox>
            <Label text="REGISTRO DE CALIFICACIONES"
                   style="-fx-font-size: 22pt; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Sistema de evaluación académica por parciales"
                   style="-fx-font-size: 11pt; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>
    </HBox>

    <VBox spacing="25" style="-fx-padding: 30;">

        <VBox spacing="20"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

            <HBox alignment="CENTER_LEFT" spacing="12">
                <Region prefWidth="6" prefHeight="30"
                        style="-fx-background-color: linear-gradient(to bottom, #fc466b, #3f5efb); -fx-background-radius: 3;"/>
                <Label text="Nueva Evaluación"
                       style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>

            <GridPane hgap="20" vgap="20">
                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="" style="-fx-font-size: 14pt; -fx-text-fill: #667eea;"/>
                        <Label text="ALUMNO" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    <ComboBox fx:id="cbAlumno" maxWidth="Infinity" promptText="Buscar estudiante..."
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 8; -fx-font-size: 11pt;"/>
                </VBox>

                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="" style="-fx-font-size: 14pt; -fx-text-fill: #f093fb;"/>
                        <Label text="MATERIA" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    <ComboBox fx:id="cbInscripcion" maxWidth="Infinity" promptText="Seleccionar materia..."
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 8; -fx-font-size: 11pt;"/>
                </VBox>

                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="" style="-fx-font-size: 14pt; -fx-text-fill: #4facfe;"/>
                        <Label text="CALIFICACIÓN (0-10)" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    <TextField fx:id="txtCalificacion" promptText="Ej: 8.5"
                               style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                </VBox>

                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="" style="-fx-font-size: 14pt; -fx-text-fill: #fa709a;"/>
                        <Label text="NÚMERO DE PARCIAL" style="-fx-font-weight: bold; -fx-font-size: 10pt; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    <ComboBox fx:id="cbNumeroParcial" maxWidth="Infinity" promptText="1, 2 o 3"
                              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 8; -fx-font-size: 11pt;"/>
                </VBox>
            </GridPane>

            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0 0 0;">
                <Button text="GUARDAR" onAction="#handleSaveCalificacion"
                        style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13pt; -fx-padding: 15 40; -fx-background-radius: 10;"/>

                <Button text="ELIMINAR" onAction="#handleDeleteCalificacion"
                        style="-fx-background-color: linear-gradient(to right, #e74c3c, #c0392b); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13pt; -fx-padding: 15 40; -fx-background-radius: 10;"/>

                <Button text="VER PROMEDIO" onAction="#handleConsultarPromedio"
                        style="-fx-background-color: linear-gradient(to right, #3498db, #2980b9); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13pt; -fx-padding: 15 40; -fx-background-radius: 10;"/>
            </HBox>
        </VBox>

        <VBox spacing="15" VBox.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Region prefWidth="50" prefHeight="50"
                        style="-fx-background-color: linear-gradient(to bottom right, #fc466b, #3f5efb); -fx-background-radius: 25;"/>
                <VBox>
                    <Label text="Historial de Calificaciones"
                           style="-fx-font-size: 16pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Registro completo de evaluaciones parciales"
                           style="-fx-font-size: 11pt; -fx-text-fill: #95a5a6;"/>
                </VBox>
            </HBox>

            <TableView fx:id="tableViewParciales" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: #fafbfc; -fx-background-radius: 10;">
                <columns>
                    <TableColumn fx:id="colID" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colInscripcionID" text="Inscripción" prefWidth="140"/>
                    <TableColumn fx:id="colCalificacion" text="Calificación" prefWidth="140"/>
                    <TableColumn fx:id="colNumeroParcial" text="Parcial" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>
</VBox>