<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.CalificacionesController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Registro de Calificaciones Finales" style="-fx-font-size: 18pt; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="1. Seleccionar Alumno:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="cbAlumno" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="2. Seleccionar Inscripción (Materia):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="cbInscripcion" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="3. Calificación Final (0-10):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtCalificacion" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="4. Número de Parcial:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cbNumeroParcial" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Registrar/Actualizar Calificación" onAction="#handleSaveCalificacion"/>
        <Button text="Eliminar Calificación" onAction="#handleDeleteCalificacion"/>
        <Button text="Ver Historial (Promedio)" onAction="#handleConsultarPromedio"/>
    </HBox>

    <Separator/>

    <Label text="Historial de Calificaciones" style="-fx-font-weight: bold;"/>
    <TableView fx:id="tableViewParciales" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colID" text="ID Calif." prefWidth="70"/>
            <TableColumn fx:id="colInscripcionID" text="ID Inscripción" prefWidth="100"/>
            <TableColumn fx:id="colCalificacion" text="Nota Parcial" prefWidth="100"/>

            <TableColumn fx:id="colNumeroParcial" text="Parcial" prefWidth="80"/>

        </columns>
    </TableView>

</VBox>