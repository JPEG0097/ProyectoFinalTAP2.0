<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.GrupoController"
      style="-fx-background-color: #f8f9fa;">

    <HBox alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: linear-gradient(to right, #16a085, #1abc9c); -fx-padding: 25;">
        <Label text="" style="-fx-font-size: 32pt;"/>
        <VBox>
            <Label text="Gestión de Grupos"
                   style="-fx-font-size: 22pt; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Organización de grupos y semestres"
                   style="-fx-font-size: 11pt; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>
    </HBox>

    <VBox spacing="20" style="-fx-padding: 25;">

        <VBox spacing="15"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <Label text="Información del Grupo"
                   style="-fx-font-size: 15pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <GridPane hgap="15" vgap="15">
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Nombre del Grupo" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtNombreGrupo" promptText="Ej: 501, 602-A"
                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 11pt; -fx-border-color: #dee2e6; -fx-border-radius: 6;"/>
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Semestre" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                    <TextField fx:id="txtSemestre" promptText="Ej: 5, 6"
                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-padding: 10; -fx-font-size: 11pt; -fx-border-color: #dee2e6; -fx-border-radius: 6;"/>
                </VBox>
            </GridPane>

            <HBox alignment="CENTER" spacing="12" style="-fx-padding: 10 0 0 0;">
                <Button text="Registrar" onAction="#handleSaveGrupo"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11pt; -fx-padding: 10 25; -fx-background-radius: 6; -fx-cursor: hand;"/>

                <Button text="Actualizar" onAction="#handleUpdateGrupo"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11pt; -fx-padding: 10 25; -fx-background-radius: 6; -fx-cursor: hand;"/>

                <Button text="Eliminar" onAction="#handleDeleteGrupo"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11pt; -fx-padding: 10 25; -fx-background-radius: 6; -fx-cursor: hand;"/>
            </HBox>
        </VBox>

        <VBox spacing="10" VBox.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <Label text="Lista de Grupos Registrados"
                   style="-fx-font-size: 14pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <TableView fx:id="tableViewGrupos" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: transparent; -fx-table-cell-border-color: #ecf0f1;">
                <columns>
                    <TableColumn fx:id="colID" text="ID" prefWidth="80"
                                 style="-fx-alignment: center;"/>
                    <TableColumn fx:id="colNombre" text="Nombre del Grupo" prefWidth="250"/>
                    <TableColumn fx:id="colSemestre" text="Semestre" prefWidth="150"
                                 style="-fx-alignment: center;"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>
</VBox>