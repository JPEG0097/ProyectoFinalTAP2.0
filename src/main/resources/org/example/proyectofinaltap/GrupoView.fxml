<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.GrupoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="GestiÃ³n de Grupos" style="-fx-font-size: 18pt; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre del Grupo (Ej. 501):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNombreGrupo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Semestre (Ej. 5):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtSemestre" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Registrar Nuevo" onAction="#handleSaveGrupo"/>
        <Button text="Actualizar" onAction="#handleUpdateGrupo"/>
        <Button text="Eliminar Seleccionado" onAction="#handleDeleteGrupo"/>
    </HBox>

    <Separator/>

    <Label text="Lista de Grupos Registrados" style="-fx-font-weight: bold;"/>
    <TableView fx:id="tableViewGrupos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colID" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
            <TableColumn fx:id="colSemestre" text="Semestre" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>