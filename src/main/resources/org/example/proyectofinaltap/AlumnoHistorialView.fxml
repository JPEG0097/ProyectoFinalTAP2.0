<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.AlumnoHistorialController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Mi Historial Académico" style="-fx-font-size: 18pt; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="20">
        <Label text="Promedio General:" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblPromedioGeneral" text="--"/>

        <Label text="Estado Final:" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblEstado" text="--"/>
    </HBox>

    <Separator/>

    <Label text="Calificaciones por Materia" style="-fx-font-weight: bold;"/>
    <TableView fx:id="tableViewHistorial" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colMateria" text="Materia" prefWidth="200"/>
            <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"/>
            <TableColumn fx:id="colCalificacion" text="Nota Final" prefWidth="100"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
        </columns>
    </TableView>

</VBox>