<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainBorderPane" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.Principal"
            style="-fx-background-color: #ecf0f1;">

    <left>
        <VBox spacing="0" alignment="TOP_LEFT" prefWidth="280"
              style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298, #1e3c72); -fx-padding: 0;">

            <VBox spacing="15" alignment="CENTER"
                  style="-fx-background-color: rgba(0,0,0,0.2); -fx-padding: 30 20 30 20;">
                <StackPane>
                    <Region prefWidth="80" prefHeight="80"
                            style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 40;"/>
                    <Label text="" style="-fx-font-size: 42pt;"/>
                </StackPane>
                <Label text="SISTEMA"
                       style="-fx-font-weight: bold; -fx-font-size: 16pt; -fx-text-fill: white; -fx-letter-spacing: 2px;"/>
                <Label text="ACADÉMICO 2024"
                       style="-fx-font-size: 10pt; -fx-text-fill: rgba(255,255,255,0.7); -fx-letter-spacing: 1px;"/>
            </VBox>

            <VBox spacing="8" style="-fx-padding: 20 15;">
                <Label text="MENÚ PRINCIPAL"
                       style="-fx-font-size: 9pt; -fx-font-weight: bold; -fx-text-fill: rgba(255,255,255,0.5); -fx-padding: 10 10 5 10;"/>

                <Button text="Grupos" maxWidth="Infinity" onAction="#showGrupoView"
                        style="-fx-background-color: rgba(255,255,255,0.05); -fx-text-fill: white; -fx-font-size: 13pt; -fx-alignment: center-left; -fx-padding: 15 20; -fx-background-radius: 10; -fx-cursor: hand; -fx-border-color: transparent; -fx-border-width: 0;"/>

                <Button text="Alumnos" maxWidth="Infinity" onAction="#showAlumnoView"
                        style="-fx-background-color: rgba(255,255,255,0.05); -fx-text-fill: white; -fx-font-size: 13pt; -fx-alignment: center-left; -fx-padding: 15 20; -fx-background-radius: 10; -fx-cursor: hand;"/>

                <Button text="Materias" maxWidth="Infinity" onAction="#showMateriaView"
                        style="-fx-background-color: rgba(255,255,255,0.05); -fx-text-fill: white; -fx-font-size: 13pt; -fx-alignment: center-left; -fx-padding: 15 20; -fx-background-radius: 10; -fx-cursor: hand;"/>

                <Button text="Inscripciones" maxWidth="Infinity" onAction="#showInscripcionView"
                        style="-fx-background-color: rgba(255,255,255,0.05); -fx-text-fill: white; -fx-font-size: 13pt; -fx-alignment: center-left; -fx-padding: 15 20; -fx-background-radius: 10; -fx-cursor: hand;"/>

                <Button text="Calificaciones" maxWidth="Infinity" onAction="#showCalificacionView"
                        style="-fx-background-color: rgba(255,255,255,0.05); -fx-text-fill: white; -fx-font-size: 13pt; -fx-alignment: center-left; -fx-padding: 15 20; -fx-background-radius: 10; -fx-cursor: hand;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox spacing="10" style="-fx-padding: 15;">
                <Separator style="-fx-background-color: rgba(255,255,255,0.2);"/>

                <Button text="Registro de Usuarios" maxWidth="Infinity" onAction="#showRegistroView"
                        style="-fx-background-color: rgba(255,255,255,0.08); -fx-text-fill: white; -fx-font-size: 12pt; -fx-alignment: center-left; -fx-padding: 12 15; -fx-background-radius: 8; -fx-cursor: hand;"/>

                <Button text="Cerrar Sesión" maxWidth="Infinity" onAction="#handleLogout"
                        style="-fx-background-color: linear-gradient(to right, #c0392b, #e74c3c); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12pt; -fx-alignment: center-left; -fx-padding: 12 15; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.4), 10, 0, 0, 3);"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <StackPane style="-fx-background-color: #ecf0f1;">
            <Pane>
                <Region layoutX="100" layoutY="50" prefWidth="200" prefHeight="200"
                        style="-fx-background-color: rgba(52,152,219,0.05); -fx-background-radius: 100;"/>
                <Region layoutX="500" layoutY="300" prefWidth="300" prefHeight="300"
                        style="-fx-background-color: rgba(155,89,182,0.05); -fx-background-radius: 150;"/>
            </Pane>

            <VBox alignment="CENTER" spacing="30">
                <VBox alignment="CENTER" spacing="25" maxWidth="650"
                      style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 60; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 5);">

                    <StackPane>
                        <Region prefWidth="120" prefHeight="120"
                                style="-fx-background-color: linear-gradient(to bottom right, #3498db, #2980b9); -fx-background-radius: 60; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 20, 0, 0, 5);"/>
                        <Label text="" style="-fx-font-size: 72pt;"/>
                    </StackPane>

                    <VBox spacing="10" alignment="CENTER">
                        <Label text="¡Bienvenido al Sistema!"
                               style="-fx-font-size: 32pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="Gestión Académica y Control de Calificaciones"
                               style="-fx-font-size: 15pt; -fx-text-fill: #7f8c8d; -fx-text-alignment: center;" wrapText="true"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="8"
                          style="-fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-padding: 20;">
                        <Label text="Selecciona una opción del menú lateral"
                               style="-fx-font-size: 13pt; -fx-text-fill: #34495e; -fx-font-weight: bold;"/>
                        <Label text="para comenzar a gestionar el sistema"
                               style="-fx-font-size: 11pt; -fx-text-fill: #95a5a6;"/>
                    </VBox>

                    <HBox spacing="20" alignment="CENTER">
                        <VBox alignment="CENTER" spacing="12"
                              style="-fx-background-color: linear-gradient(to bottom, #ecf0f1, #f8f9fa); -fx-background-radius: 12; -fx-padding: 25; -fx-cursor: hand;"
                              prefWidth="140" prefHeight="140">
                            <StackPane>
                                <Region prefWidth="50" prefHeight="50"
                                        style="-fx-background-color: rgba(22,160,133,0.2); -fx-background-radius: 25;"/>
                                <Label text="" style="-fx-font-size: 28pt;"/>
                            </StackPane>
                            <VBox alignment="CENTER" spacing="2">
                                <Label text="Grupos" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 12pt;"/>
                                <Label text="Gestionar" style="-fx-text-fill: #95a5a6; -fx-font-size: 9pt;"/>
                            </VBox>
                        </VBox>

                        <VBox alignment="CENTER" spacing="12"
                              style="-fx-background-color: linear-gradient(to bottom, #ecf0f1, #f8f9fa); -fx-background-radius: 12; -fx-padding: 25; -fx-cursor: hand;"
                              prefWidth="140" prefHeight="140">
                            <StackPane>
                                <Region prefWidth="50" prefHeight="50"
                                        style="-fx-background-color: rgba(52,152,219,0.2); -fx-background-radius: 25;"/>
                                <Label text="" style="-fx-font-size: 28pt;"/>
                            </StackPane>
                            <VBox alignment="CENTER" spacing="2">
                                <Label text="Alumnos" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 12pt;"/>
                                <Label text="Administrar" style="-fx-text-fill: #95a5a6; -fx-font-size: 9pt;"/>
                            </VBox>
                        </VBox>

                        <VBox alignment="CENTER" spacing="12"
                              style="-fx-background-color: linear-gradient(to bottom, #ecf0f1, #f8f9fa); -fx-background-radius: 12; -fx-padding: 25; -fx-cursor: hand;"
                              prefWidth="140" prefHeight="140">
                            <StackPane>
                                <Region prefWidth="50" prefHeight="50"
                                        style="-fx-background-color: rgba(231,76,60,0.2); -fx-background-radius: 25;"/>
                                <Label text="" style="-fx-font-size: 28pt;"/>
                            </StackPane>
                            <VBox alignment="CENTER" spacing="2">
                                <Label text="Notas" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 12pt;"/>
                                <Label text="Calificar" style="-fx-text-fill: #95a5a6; -fx-font-size: 9pt;"/>
                            </VBox>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20"
              style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, -2);">

            <HBox spacing="10" alignment="CENTER">
                <StackPane>
                    <Region prefWidth="12" prefHeight="12"
                            style="-fx-background-color: #27ae60; -fx-background-radius: 6;"/>
                </StackPane>
                <Label fx:id="lblStatus" text="Sistema Operativo"
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 11pt;"/>
            </HBox>

            <Separator orientation="VERTICAL"/>

            <HBox spacing="8" alignment="CENTER">
                <Label text="" style="-fx-font-size: 12pt;"/>
                <Label text="Diciembre 2024" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10pt;"/>
            </HBox>

            <Separator orientation="VERTICAL"/>

            <HBox spacing="8" alignment="CENTER">
                <Label text="⚙️" style="-fx-font-size: 12pt;"/>
                <Label text="Versión 2.0 Premium" style="-fx-text-fill: #95a5a6; -fx-font-size: 10pt;"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <HBox spacing="8" alignment="CENTER">
                <Label text="" style="-fx-font-size: 12pt;"/>
                <Label text="Usuario: Admin" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10pt; -fx-font-weight: bold;"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>